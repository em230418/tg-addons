<odoo>

    <template id="details_passport" inherit_id="website_portal.details">
        <xpath expr="//input[@name='email']/.." position="after">
            <div t-attf-class="form-group #{error.get('passport') and 'has-error' or ''} col-lg-6">
                <label class="control-label" for="passport">Passport</label>
                <input type="text" name="passport" class="form-control" t-att-value="passport or partner.passport" />
            </div>
        </xpath>
    </template>

